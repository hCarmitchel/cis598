<div class="page-header" style="margin:0px">
	<h1>
		<%= link_to @tv_season.tv_show.title, @tv_season.tv_show, :method =>
		"get" %>
		<small>
			<%= link_to 'Season '+@tv_season.number.to_s, @tv_season, :method =>"get" %></small>
		<span class="badge badge-info pull-right">IMDB N/A
			<span></h1>
		</div>

		<div class="row-fluid">
			<div class="span7">
				<div class="tabbable">
					<ul class="nav nav-tabs" id="myTab">
						<li class="active">
							<a data-toggle="tab" href="#about">About</a>
						</li>
						<li>
							<a data-toggle="tab" href="#stats">Stats</a>
						</li>
					</ul>

					<div class="tab-content">
						<div class="tab-pane active" id="about">
							</div>
							<div class="tab-pane" id="stats">
								Average rating for show:
              					Average rating for season:
							</div>

							<%= link_to 'Edit', edit_tv_season_path(@tv_season) %>
							|
							<%= link_to 'TV Seasons Index', tv_seasons_path %></div>
					</div>
				</div>

				<div class="span5">
					<div class="accordion" id="accordion1">
						<% @tv_season.tv_show.tv_seasons.each do |season| %>
            <div class="accordion-group">
              <div class="accordion-heading">
                <%= link_to '<i class="icon-plus"></i>'.html_safe, tv_season_path(season.id), :style => 'display:inline', :class =>
                'accordion-toggle', :data => {:toggle=>"collapse",:parent=>"#accordian1"}, :href => '#'+season.id.to_s %>
                <%= link_to 'Season '+ season.number.to_s, tv_season_path(season.id) %>
              </div>
              <div id=<%= season.id.to_s %>
                class="accordion-body collapse">
                <div class="accordion-inner">
                  <ul>
                    <% season.tv_episodes.each do |episode| %>
                    <li>
                      <%= link_to 'Episode '+ episode.number.to_s+': '+episode.title, tv_episode_path(episode.id) %></li>
                    <% end %></ul>
                </div>
              </div>
            </div>
            <% end %></div>
				</div>
			</div>