<% content_for :javascript do %>
<script>
    $(".tablesorter-blue").tablesorter(); 
</script>
<% end %>

<h4>Genre Index</h4>

<table  id="myTable" class="tablesorter-blue">
<thead>
  <tr>
    <th>Name</th>
    <th>Show</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @genres.each do |genre| %>
  <tr>    
    <td><%= genre.name %></td>
    <td><%= genre.show_id %></td>
    <td><%= link_to 'Show', genre %></td>
    <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
    <td><%= link_to 'Destroy', genre, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= button_to "Add Genre", new_genre_path, :method => "get", :class=> "btn btn-primary"%>
