<script>
</script>
<% end %>

<h4>Genre Index</h4>

<table cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered">
<thead>
  <tr>
    <th>Name</th>
    <th>Show</th>
    <th>Actions</th>
  </tr>
</thead>
<tbody>
<% @genres.each do |genre| %>
  <tr>    
    <td><%= link_to genre.name, genre, :method => "get" %></td>
    <td><%= link_to genre.tv_show.title, genre.tv_show, :method => "get" %></td>
    <td class="actions">
      <%= icon_link_to(genre,{:icon => "eye-open",:enlarge => false},{ :method => :get }) %>
      <%= icon_link_to(edit_genre_path(genre),{:icon => "pencil",:enlarge => false},{ :method => :get }) %>
      <%= icon_link_to(genre,{:icon => "trash",:enlarge => false},{ confirm: 'Are you sure?',:method => :delete }) %>
    </td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= button_to "Add Genre", new_genre_path, :method => "get", :class=> "btn btn-primary"%>
