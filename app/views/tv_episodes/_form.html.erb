<%= simple_form_for(@tv_episode) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :tv_season %>
    <%= f.input :number %>
    <%= f.input :title %>
    <%= f.input :air_date,  as: :date, start_year: Date.today.year,
                              end_year: Date.today.year-100,
                              order: [:day, :month, :year], :include_blank => "", :priority => "" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Save', class: "btn btn-primary" %>
  </div>
<% end %>
