<%= simple_form_for(@rating) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :votes %>
    <%= f.input :total_rating %>
    <%= f.input :rating_website, collection: [ "IMDB", "Metacritic", "Netflix"], :include_blank => false %>
    <%= f.input :rateable_type, collection: ["TvShow", "TvSeason", "TvEpisode"], :include_blank => false %>
    <%= f.input :rateable_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Save', class: "btn btn-primary" %>
  </div>
<% end %>
