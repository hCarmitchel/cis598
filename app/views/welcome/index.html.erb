<% content_for :javascript do %>
<script>
  $('.flexslider').flexslider({
    animation: "slide",
    controlNav: "thumbnails"
  });
  $(".select_change").change(function(){ $(this).parent('form').submit(); });
</script>
<% end %>

<div class="row-fluid" style="margin-top:30px">
  <div class="span7">
<div class="flexslider" style="margin-bottom:20px;" class="clearfix">
  <ul class="slides">
    <li data-thumb="/assets/breaking_bad.jpg">
     <%= link_to image_tag("/assets/breaking_bad.jpg", :style => "position:relative"), tv_show_path(@breaking_bad) %>
        <p class="flex-caption">Featured Show: Breaking Bad</p>
    </li>
    <li data-thumb="/assets/archer.png">
     <%= link_to image_tag("/assets/archer.png", :style => "position:relative"), tv_show_path(@archer) %>
        <p class="flex-caption">Featured Show: Archer</p>
    </li>   
    <li data-thumb="/assets/game_of_thrones.png">
     <%= link_to image_tag("/assets/game_of_thrones.png", :style => "position:relative"), tv_show_path(@game_of_thrones) %>
         <p class="flex-caption">Featured Show: Game of Thrones</p>
    </li>  
    <li data-thumb="/assets/the_americans.png">
     <%= link_to image_tag("/assets/the_americans.png", :style => "position:relative"), tv_show_path(@the_americans) %>
         <p class="flex-caption">Featured Show: The Americans</p>
    </li>
  </ul>
</div>
  </div>
  <div class="span4 offset1">  	
  	<h4>
  		<form action="index" class="display:inline; float:left;">
  			<%= select( "type", "select", { "Top TV Shows" => "1", "Top TV Seasons" => "2", "Top TV Episodes" => "3"}, {}, :class => 'select_change') %>
		on
        <%= select( "website", "select", { "IMDB" => "IMDB", "Metacritic" => "Metacritic", "Netflix" => "Netflix"}, {}, :class => 'input-small select_change') %>
		</form> 
	</h4>
  <div class="row-fluid">
  <div class="span8">
	<ol style="font-size:14px; margin-left:50px;">
    <% if @shows %>aa
      <% @top.each do |tv_show| %>
  		<li><%= link_to(tv_show.title, tv_show_path(tv_show)) %></li>
      <% end %>
    <% end %>
    <% if @seasons %>ff
      <% @top.each do |tv_season| %>
      <li><%= link_to(tv_season.tv_show.title +" "+ tv_season.number.to_s, tv_season_path(tv_season)) %></li>
      <% end %>
    <% end %>
    <% if @eps %>sdfsdf
      <% @top.each do |tv_episode| %>
      <li><%= link_to(tv_episode.tv_season.tv_show.title+" S"+tv_episode.tv_season.number.to_s+"xE"+tv_episode.number.to_s, tv_episode_path(tv_episode)) %></li>
      <% end %>
    <% end %>
	</ol>
</div>
  <div class="span1">
  <ul style="font-size:14px;list-style:none">
    <% @top.each do |tv_show| %>
    <li>
      <span class="badge badge-info"><%= tv_show.total_rating %></span>
    </li>
    <% end %>
  </ul>
</div>
</div>
</div>
</div>
<div class="row-fluid">
  <div class="span7">
  	<h4>Recent reviews</h4>
  <hr>

  </div>
  <div class="span4 offset1">
  	<h4>News and Updates</h4>
  <hr>
  </div>
</div>

