<% content_for :javascript do %>
<script>
  $('.flexslider').flexslider({
    animation: "slide",
    controlNav: "thumbnails"
  });
</script>
<% end %>

<div class="row-fluid" style="margin-top:30px">
  <div class="span7">
<div class="flexslider" style="margin-bottom:20px;" class="clearfix">
  <ul class="slides">
    <li data-thumb="/assets/breaking_bad.jpg">
     <%= link_to image_tag("/assets/breaking_bad.jpg", :style => "position:relative"), tv_show_path("Breaking Bad") %>
        <p class="flex-caption">Featured Show: Breaking Bad</p>
    </li>
    <li data-thumb="/assets/archer.png">
     <%= link_to image_tag("/assets/archer.png", :style => "position:relative"), tv_show_path("Archer") %>
        <p class="flex-caption">Featured Show: Archer</p>
    </li>   
    <li data-thumb="/assets/game_of_thrones.png">
     <%= link_to image_tag("/assets/game_of_thrones.png", :style => "position:relative"), tv_show_path("Game of Thrones") %>
         <p class="flex-caption">Featured Show: Game of Thrones</p>
    </li>  
    <li data-thumb="/assets/the_americans.png">
     <%= link_to image_tag("/assets/the_americans.png", :style => "position:relative"), tv_show_path("The Americans") %>
         <p class="flex-caption">Featured Show: The Americans</p>
    </li>
  </ul>
</div>
  </div>
  <div class="span4 offset1">  	
  	<h4>
  		<form action="" class="display:inline; float:left;">
  			<select name="cars" class="" >
				<option value="volvo">Top TV Shows</option>
				<option value="saab">Top Episodes</option>
				<option value="fiat">Top Seasons</option>
			</select>
		on
			<select name="cars" class="input-small" >
				<option value="volvo">IMDB</option>
				<option value="saab">Metacritic</option>
				<option value="fiat">Netflix</option>
			</select>
		</form> 
	</h4>
	<ol style="font-size:14px; margin-left:50px;">
    <% @topIMDB.each do |show| %>
		<li>
      <%= link_to(show.title, tv_show_path(show.title)) %> <span class="badge badge-info"><%= show.total_rating %></span>
    </li>
    <% end %>
	</ol>
</div>
</div>
<div class="row-fluid">
  <div class="span7">
  	<h4>Recent reviews</h4>
  <hr>

  </div>
  <div class="span4 offset1">
  	<h4>News and Updates</h4>
  <hr>
  </div>
</div>

