<%= simple_form_for(@review) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content, :input_html => {:rows => 5, :class => "span6"} %>
    <%= f.input :year_reviewed, as: :date, start_year: Date.today.year,
                              end_year: Date.today.year-100,
                              order: [:day, :month, :year], :include_blank => "", :priority => "" %>
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :link %>
    <%= f.input :rating %>
    <%= f.input :website %>
    <%= f.input :reviewable_type, collection: ["TvShow", "TvSeason", "TvEpisode"], :include_blank => false %>
    <%= f.input :reviewable_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
